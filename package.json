{
  "name": "api",
  "description": "App API",
  "author": "Maurice Faber <morriz@idiotz.nl>",
  "version": "0.1.0",
  "repository": {
    "type": "git",
    "url": "https://github.com/morriz/demo-loopback-api.git"
  },
  "engines": {
    "node": "^5.4.1"
  },
  "main": "build/server/server.js",
  "keywords": [
    "nodejs",
    "loopback",
    "babel"
  ],
  "scripts": {
    "dev:babel": "nodemon --delay 1.5 --exec node -r babel-register -r babel-polyfill server/server.js",
    "dev": "nodemon --watch build --delay5 --exec npm start",
    "clean": "rm -rf .tmp build > /dev/null",
    "copy-es6": "npm run clean --silent && mkdir .tmp build && cp -r common demo-files server test .tmp/ && cp -r .tmp/* build/",
    "build": "npm run copy-es6 && babel .tmp --out-dir build",
    "lint": "eslint . -f node_modules/eslint-friendly-formatter",
    "test": "TESTMODE=unit _mocha --compilers js:babel-core/register --require babel-polyfill test/**/*.js",
    "cover": "istanbul cover _mocha --compilers js:babel-core/register --require babel-polyfill -- -R spec test/**/*",
    "preinstall": "npm run clean",
    "start": "node ."
  },
  "dependencies": {
    "basic-auth": "^1.0.3",
    "bluebird": "^3.1.4",
    "body-parser": "^1.14.0",
    "compression": "^1.0.3",
    "connect-flash": "^0.1.1",
    "cookie-parser": "^1.4.1",
    "cookie-session": "^1.2.0",
    "cors": "^2.5.2",
    "debug": "^2.2.0",
    "easynexmo": "^0.7.0",
    "errorhandler": "^1.1.1",
    "express-session": "^1.11.3",
    "helmet": "^1.3.0",
    "i18n": "^0.5.0",
    "lodash": "^3.10.1",
    "loopback": "^2.27.0",
    "loopback-boot": "^2.17.0",
    "loopback-component-explorer": "^2.3.0",
    "loopback-component-storage": "^1.7.0",
    "loopback-connector-mongodb": "^1.13.3",
    "loopback-datasource-juggler": "^2.45.2",
    "mandrill-api": "^1.0.45",
    "moment": "^2.11.1",
    "node-phonenumber": "^0.2.2",
    "passport": "^0.2.2",
    "password-generator": "^2.0.2",
    "pify": "^2.3.0",
    "request": "^2.67.0",
    "socket.io": "^1.3.7",
    "socket.io-client": "^1.3.7",
    "speakeasy": "^1.0.3",
    "sqs-consumer": "^3.1.2",
    "superagent": "^1.6.1",
    "xml2js": "^0.4.16"
  },
  "devDependencies": {
    "babel-cli": "^6.4.5",
    "babel-core": "^6.4.5",
    "babel-eslint": "^4.1.3",
    "babel-plugin-add-module-exports": "^0.1.2",
    "babel-plugin-syntax-decorators": "^6.3.13",
    "babel-plugin-syntax-object-rest-spread": "^6.5.0",
    "babel-plugin-transform-runtime": "^6.4.3",
    "babel-polyfill": "^6.3.14",
    "babel-preset-es2015": "^6.3.13",
    "babel-preset-stage-0": "^6.3.13",
    "babel-register": "^6.5.2",
    "babel-runtime": "^6.3.19",
    "chai": "~2.1.0",
    "eslint": "^1.7.2",
    "eslint-config-standard": "^4.4.0",
    "eslint-friendly-formatter": "^1.2.2",
    "eslint-plugin-import": "^0.10.0",
    "eslint-plugin-standard": "^1.3.1",
    "istanbul": "^0.3.20",
    "mocha": "~2.1.0",
    "nodemon": "^1.7.3",
    "nsp": "^2.3.0",
    "sinon": "^1.16.1",
    "sinon-chai": "^2.8.0"
  }
}
